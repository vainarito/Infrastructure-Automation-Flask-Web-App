version: '2.4'
services:
  app:
      build: .
      ports:
          - "5000:5000"
      volumes:
          - .:/app
      command: python -c 'from app import create_app; app = create_app(); app.run(host="0.0.0.0", port=5000)'
  nginx:
      image: nginx
      ports:
          - "80:80"
      volumes:
          - ./nginx.conf:/etc/nginx/conf.d/default.conf